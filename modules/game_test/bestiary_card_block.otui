BestiaryCardBlock < UIWidget
  width: 290
  height: 110
  background-color: #363636
  border-width: 2
  border-color: #555555
  border-radius: 3
  padding: 5
  margin: 3

  // Fundo interno para dar efeito de relevo
  UIWidget
    id: innerPanel
    anchors.fill: parent
    background-color: #404040
    border-width: 1
    border-color: #202020
    margin: 2

    // Área do Icone (Esquerda)
    UIWidget
      id: iconBg
      anchors.left: parent.left
      anchors.verticalCenter: parent.verticalCenter
      margin-left: 8
      width: 54
      height: 54
      background-color: #1a1a1a
      border-width: 1
      border-color: #555555

      UIWidget
        id: icon
        anchors.fill: parent
        margin: 1

    // Nome do Monstro
    UILabel
      id: nameLabel
      anchors.left: iconBg.right
      anchors.top: parent.top
      anchors.right: parent.right
      margin-left: 10
      margin-top: 8
      margin-right: 25
      font: verdana-11px-rounded
      text-align: left
      color: #e0e0e0

    // Ciclos
    UILabel
      id: cycleLabel
      anchors.left: iconBg.right
      anchors.top: nameLabel.bottom
      margin-left: 10
      margin-top: 4
      font: verdana-10px
      color: #aaaaaa
      text-align: left

    // Kills (Novo Label)
    UILabel
      id: killsLabel
      anchors.left: iconBg.right
      anchors.top: cycleLabel.bottom
      margin-left: 10
      margin-top: 5
      font: verdana-10px
      color: #bbbbbb
      text-align: left

    // Barra de Progresso Background
    UIWidget
      id: progressBarBg
      anchors.left: iconBg.right
      anchors.right: parent.right
      anchors.bottom: parent.bottom
      margin-left: 10
      margin-right: 10
      margin-bottom: 15
      height: 18
      background-color: #111111
      border-width: 1
      border-color: #555555

      // Barra de Progresso Fill
      UIWidget
        id: progressBarFill
        anchors.left: parent.left
        anchors.top: parent.top
        anchors.bottom: parent.bottom
        width: 0
        background-color: #a03333
        margin: 1

      // Texto da Porcentagem
      UILabel
        id: progressText
        anchors.fill: parent
        text-align: center
        font: verdana-11px-rounded
        color: #ffffff
        text: "0%"
        margin-top: 2

    // Botão de Marcador (Estilo "Pin" ou similar)
    UIButton
      id: markerButton
      anchors.top: parent.top
      anchors.right: parent.right
      margin-top: 5
      margin-right: 5
      width: 16
      height: 16
      text: ""
      background-color: #333333
      border-width: 1
      border-color: #666666
      tooltip: Fixar no topo
