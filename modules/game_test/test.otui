MainWindow
  id: testWindow
  size: 960 600
  text: "Monster Collection"
  visible: false
  padding: 10
  background-color: #222222
  border-width: 2
  border-color: #555555
  border-radius: 5

  ComboBox
    id: sortComboBox
    width: 180
    anchors.top: parent.top
    anchors.horizontalCenter: parent.horizontalCenter
    margin-top: 25

  UIScrollArea
    id: monsterScroll
    anchors.top: sortComboBox.bottom
    anchors.left: parent.left
    anchors.right: monsterScrollbar.left
    anchors.bottom: closeButton.top
    margin-top: 15
    margin-right: 5
    margin-bottom: 10
    vertical-scrollbar: monsterScrollbar
    layout:
      type: grid
      cell-size: 290 110
      cell-spacing: 5
      flow: true

  VerticalScrollBar
    id: monsterScrollbar
    anchors.top: sortComboBox.bottom
    anchors.bottom: closeButton.top
    anchors.right: parent.right
    margin-top: 15
    margin-bottom: 10
    step: 50
    pixels-scroll: true

  UIButton
    id: closeButton
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    text: "Close"
    width: 80
    height: 24
    margin-bottom: 5
    background-color: #444444
    border-width: 1
    border-color: #666666
    border-radius: 3
